<resources>

    <style name="Devlight_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/devlight_logo</item>
    </style>

    <style name="Devlight_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Devlight_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/main_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Devlight_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Devlight_gears_layout">
        <item name="android:id">@id/gear_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pull_2_refresh_height</item>
    </style>

    <style name="Devlight_pull_to_refresh_layout">
        <item name="android:id">@id/ptr_layout</item>
        <item name="ptr_mode">drag</item>
        <item name="ptr_tension">100dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <item name="gear_layout" type="id">gear_layout</item>
    <item name="ptr_layout" type="id">ptr_layout</item>
</resources>
